{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "github_org"],
  "properties": {
    "name": {
      "type": "object",
      "required": ["gem", "constant"],
      "properties": {
        "gem": {
          "type": "string",
          "description": "The gem name"
        },
        "constant": {
          "type": "string",
          "description": "The Ruby constant name"
        },
        "title": {
          "type": "string",
          "description": "The name of the gem in title case form"
        }
      }
    },
    "github_org": {
      "type": "string",
      "description": "GitHub organization name"
    },
    "ci": {
      "type": "object",
      "properties": {
        "rubies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional Ruby versions to test against"
        },
        "matrix": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": "Additional matrix dimensions (e.g., rack versions). Each key becomes a matrix dimension with the array as its values."
        },
        "node": {
          "type": "boolean",
          "description": "Enable Node.js setup steps"
        }
      }
    },
    "gemspec": {
      "type": "object",
      "required": ["authors", "email", "summary", "homepage"],
      "properties": {
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of authors"
        },
        "email": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "email"
          },
          "description": "List of email addresses"
        },
        "summary": {
          "type": "string",
          "description": "Gem summary"
        },
        "homepage": {
          "type": "string",
          "format": "uri",
          "description": "Gem homepage"
        },
        "required_ruby_version": {
          "type": "string",
          "description": "Required Ruby version"
        },
        "development_dependencies": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "array",
                "items": { "type": "string" }
              }
            ]
          },
          "description": "Development dependencies"
        },
        "runtime_dependencies": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "array",
                "items": { "type": "string" }
              }
            ]
          },
          "description": "Runtime dependencies"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional file patterns to include in the gem"
        }
      }
    }
  }
}
